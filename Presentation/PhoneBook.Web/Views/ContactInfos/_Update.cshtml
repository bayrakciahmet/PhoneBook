@model ContactInfoUpdateInput
<div class="modal-header">
    <h5 class="modal-title">İletişim Bilgisi Düzenle (@Model.FullName)</h5>
</div>
<form asp-controller="ContactInfos" asp-action="Update" method="post" class="ajax-form" data-popup="main-modal" data-grid="refreshContactInfo">
    <input asp-for="UUID" type="hidden" class="form-control w-full" placeholder="UUID" />
    <input asp-for="PersonId" type="hidden" class="form-control w-full" placeholder="PersonId" />
    <div asp-validation-summary="ModelOnly"></div>
    <div class="intro-y box p-5">
        <div>
            <label asp-for="InfoType" class="form-label"></label>
            <select asp-for="InfoType" class="form-control w-full" placeholder="Bilgi Tipi">
                <option value="">Seçiniz</option>
                <option value="Telefon">Telefon</option>
                <option value="E-mail">E-mail</option>
                <option value="Konum">Konum</option>
            </select>
        </div>
        <div class="mt-3">
            <label asp-for="InfoContent" class="form-label"></label>
            <input asp-for="InfoContent" id="crud-form-2" type="text" class="form-control w-full" placeholder="Bilgi İçeriği" />
        </div>
        <div class="text-right mt-5">
            <button type="button" data-tw-dismiss="modal" class="btn btn-outline-secondary w-24 mr-1">İptal</button>
            <button type="submit" class="btn btn-primary w-24">Kaydet</button>
        </div>
    </div>
</form>