@{
    Layout = null;
}
@model PhoneBook.Web.Models.SigninInput
<!DOCTYPE html>
<html lang="tr" class="light">
<!-- BEGIN: Head -->
<head>
    <meta charset="utf-8">
    <link href="/Content/dist/images/logo.svg" rel="shortcut icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Ahmet BAYRAKCI">
    <title>Giriş Yap | Phone Book</title>
    <!-- BEGIN: CSS Assets-->
    <link rel="stylesheet" href="/Content/dist/css/app.css" />
    <!-- END: CSS Assets-->
</head>
<!-- END: Head -->
<body class="login">
    <div class="container sm:px-10">
        <div class="block xl:grid grid-cols-2 gap-4">
            <!-- BEGIN: Login Info -->
            <div class="hidden xl:flex flex-col min-h-screen">
                <a asp-controller="Auth" asp-action="SignIn" class="-intro-x flex items-center pt-5">
                    <img alt="Phone Book" class="w-6" src="/Content/dist/images/logo.svg">
                    <span class="text-white text-lg ml-3"> Phone Book</span>
                </a>
                <div class="my-auto">
                    <img alt="Phone Book" class="-intro-x @*w-1/2*@ -mt-16" src="/Content/dist/images/illustration.svg">
                    <div class="-intro-x text-white font-medium text-4xl leading-tight mt-10">
                        Phone Book
                    </div>
                </div>
            </div>
            <!-- END: Login Info -->
            <!-- BEGIN: Login Form -->
            <div class="h-screen xl:h-auto flex py-5 xl:py-0 my-10 xl:my-0">
                <div class="my-auto mx-auto xl:ml-20 bg-white dark:bg-darkmode-600 xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
                    <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left">
                        Oturum Aç
                    </h2>                  
                    <form asp-controller="Auth" asp-action="SignIn" method="post">
                        <div class="intro-x mt-2 text-slate-400 xl:hidden text-center">Phone Book hesabınızda oturum açın.</div>
                        <div class="intro-x mt-8">
                            <input asp-for="Email" class="intro-x login__input form-control py-3 px-4 block" placeholder="Email" value="bayrakciahmet42@gmail.com">
                            <span class="text-danger" asp-validation-for="Email"></span>
                            <input asp-for="Password" type="password" class="intro-x login__input form-control py-3 px-4 block mt-4" placeholder="Şifre" value="Dell5010*">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>       
                        <div class="intro-x flex text-slate-600 dark:text-slate-500 text-xs sm:text-sm mt-4">
                            <div class="flex items-center mr-auto">
                                <input asp-for="IsRemember" type="checkbox" class="form-check-input border mr-2">
                                <label class="cursor-pointer select-none" asp-for="IsRemember">Beni Hatırla</label>
                            </div>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="intro-x mt-5 xl:mt-8 text-center xl:text-left">
                            <button type="submit" class="btn btn-primary py-3 px-4 w-full xl:w-32 xl:mr-3 align-top">Giriş Yap</button>
                            @* <button class="btn btn-outline-secondary py-3 px-4 w-full xl:w-32 mt-3 xl:mt-0 align-top">Register</button> *@
                        </div>
                    </form>
                </div>
            </div>
            <!-- END: Login Form -->
        </div>
    </div>
    <!-- BEGIN: JS Assets-->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="/Content/dist/js/app.js"></script>
    <!-- END: JS Assets-->
</body>
</html>