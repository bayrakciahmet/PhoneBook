@model List<ReportLocationViewModel>
<h2 class="intro-y text-lg font-medium mt-10">
    Rapor İçeriği
</h2>
<div class="grid grid-cols-12 gap-6 mt-5"> 
    <!-- BEGIN: Data List -->
    <div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
        <table class="table table-report -mt-2">
            <thead>
                <tr>
                    <th class="whitespace-nowrap">Konum</th>
                    <th class="whitespace-nowrap">Kişi Sayısı</th>
                    <th class="whitespace-nowrap">Telefon Numarası Sayısı</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr class="intro-x">
                            <td>
                                <a class="font-medium whitespace-nowrap">@item.LocationName</a>
                            </td>
                            <td>
                                <a class="font-medium whitespace-nowrap">@item.PersonCount</a>
                            </td>
                            <td>
                                <a class="font-medium whitespace-nowrap">@item.PhoneNumberCount</a>
                            </td>                         
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <!-- END: Data List -->
</div>
